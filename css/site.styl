@import "kouto-swiss"

@import "fonts"

@import "helpers"
@import "genericons"

meyer-reset()
box-sizing-reset()
normalize()

// GRID OF 12 90px COLUMNS WITH 16px GUTTER
$cols = 24
$col = 40px
$gutter = 14px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
for col in 1..$cols
  .s-col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

@media screen and (min-width: 601px)

  for col in 1..$cols
    .m-col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

@media screen and (min-width: 993px)

  for col in 1..$cols
    .l-col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
$pcols = 10
for pcol in 1..$pcols
  .s-into-{pcol}
    width: ( 100% / pcol )

@media screen and (min-width: 601px)

  for pcol in 1..$pcols
    .m-into-{pcol}
      width: ( 100% / pcol )

@media screen and (min-width: 993px)

  for pcol in 1..$pcols
    .l-into-{pcol}
      width: ( 100% / pcol )

.force-col
  min-height: 1px

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 19px
$font-leading-basic = 1.45em
$font-leading-wide = 1.6em
$font-tracking-basic = 0.005em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$color-green = rgb(75, 176, 100)
$color-yellow = rgb(255, 222, 79)
$color-blue = rgb(76, 114, 158)

$border-width = 3px

// TYPOGRAPHY

body
  font-family: 'Ume P Mincho Regular', serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

.font-sans
  font-family: 'Ume UI Gothic O5', helvetica, sans-serif

h1, h2, h3, h4, h5, h6
  margin: 0

h1, h2, h3
  font-family: 'Ume UI Gothic O5', helvetica, sans-serif
  margin: 0

h1
  font-size: 3rem
  line-height: $font-leading-basic

h2
  font-size: 2rem
  line-height: $font-leading-basic

h3
  font-size: 1.5rem
  line-height: $font-leading-basic

.rotated-heading
  text-align: center
  transform: rotate(-4deg)

h3.rotated-heading
  padding: $margin-small

p
  margin: 0

.copy
  padding: $margin-basic
  p
    text-indent: ( 1 * $col ) + ( ( 1 - 1 ) * $gutter )
    &:first-child
      text-indent: 0

ol
  counter-reset: ordered-list-counter
  li
    margin-bottom: $margin-small
    &:before
      content: counter(ordered-list-counter)
      counter-increment: ordered-list-counter
      font-family: 'Ume UI Gothic O5', helvetica, sans-serif
      padding-right: $margin-small


// BACKGROUNDS

.background-green
  background-color: $color-green

.background-yellow
  background-color: $color-yellow

.background-blue
  background-color: $color-blue


// BORDERS

.border-left
  border-left: $border-width solid $color-black-soft

.border-right
  border-right: $border-width solid $color-black-soft

.border-top
  border-top: $border-width solid $color-black-soft

.border-bottom
  border-bottom: $border-width solid $color-black-soft


// PADDING

.padding-basic
  padding: $margin-basic


// ALLIGNMENT

.flex-center
  display: flex
  align-items: center
  justify-content: center


// LINKS

a, a:active, a:visited
  color: inherit
  text-decoration: none


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto


// BLOCK FEATURED IMAGES

.attachment-col22,
.attachment-col14,
.attachment-col14-5to4,
.attachment-col10,
.attachment-col10-5to4
  display: block

// ARROWS

.arrow
  font-size: 1.7rem

// HEADER

#header
  .logo
    width: 100%
    height: auto

#menu
  color: white
  ul
    display: inline-block
  li
    display: inline-block

.menu-item
  padding: 0 $margin-small
  font-size: 1.5rem

#qtranslate-chooser
  padding-left: $margin-basic
  font-size: .9rem

// INDEX

.pagination-block
  height: 5rem

// RECIPE INDEX

.taxonomy-ingredient
  text-transform: capitalize
  &:after
    content: ', '
  &:last-child:after
    content: ''

// SINGLE JOURNAL



// SINGLE RECIPE

#single-recipe-ingredients-heading
  margin-top: $margin-basic


// FOOTER

#footer
  padding-top: $margin-large
  padding-bottom: $margin-mid
  color: white
  line-height: $font-leading-wide

// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
